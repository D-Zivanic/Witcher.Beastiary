@using Witcher.Beastiary.Core.Models
@model MonsterModel

<h2>Hello World!</h2>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control col-6" type="text" asp-for="@Model.Name" required />
    </div>
    <div class="form-group">
        <label>Type</label>
        <select class="form-control col-6" asp-for="@Model.Type" asp-items="Html.GetEnumSelectList<MonsterType>()">
        </select>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control col-6" asp-for="@Model.Description"></textarea>
    </div>
    <div class="form-group">
        <label>Location</label>
        <input class="form-control col-6" type="text" asp-for="@Model.Location" required />
    </div>
    <div class="form-group">
        <label>Weakness</label>
        <input class="form-control col-6" type="text" asp-for="@Model.Weakness" />
    </div>

    <button type="submit" class="btn btn-outline-success">Save</button>

</form>